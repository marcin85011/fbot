# Environment variables for Flash Loan Arbitrage Bot
# Copy this file to .env and fill in your actual values

# GitHub Personal Access Token for MCP server
GITHUB_TOKEN=your_github_personal_access_token_here

# MCP Server configurations
CONTEXT7_MCP_ENABLED=true
COINGECKO_MCP_ENABLED=true
WEB3_MCP_ENABLED=true
CHAINSTACK_MCP_ENABLED=false
EVM_MCP_ENABLED=false

# Flash Loan Protocol Configuration
VENUS_ENABLED=true
AAVE_ENABLED=true
COMPOUND_ENABLED=false

# DEX Configuration
PANCAKESWAP_ENABLED=true
QUICKSWAP_ENABLED=true
UNISWAP_ENABLED=false

# Network Configuration
BSC_ENABLED=true
POLYGON_ENABLED=true
ETHEREUM_ENABLED=false
SOLANA_ENABLED=false

# Risk Management
MAX_DAILY_GAS_BUDGET=0.1
MIN_PROFIT_THRESHOLD=0.0025
MAX_SLIPPAGE=0.001

# Monitoring
TELEMETRY_ENABLED=true
ALERT_WEBHOOK_URL=